<% content_for('プロフィール') %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('プロフィール') %></h1>
      <%= link_to t('編集'), edit_profile_path, class: 'btn btn-success float-right' %>
      <table class="table">
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:email)) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:name)) %></th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:favorite_ingredient)) %></th>
          <td><%= current_user.favorite_ingredient %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:avatar)) %>
            <% if current_user.avatar.present? %>
              <%= image_tag current_user.avatar, width: 200, class: "mb-2" %>
            <% end %>
          </th>
        </tr>
      </table>
    </div>
  </div>
</div>